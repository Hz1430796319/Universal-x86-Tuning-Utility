									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 CPU 的短时加速功率限制" VerticalAlignment="Bottom"/>
								</StackPanel>
								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
