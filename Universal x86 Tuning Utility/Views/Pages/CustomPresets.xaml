<Page x:Class="Universal_x86_Tuning_Utility.Views.Pages.CustomPresets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Universal_x86_Tuning_Utility.Views.Pages"
          xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
          d:DataContext="{d:DesignInstance local:CustomPresets, IsDesignTimeCreatable=False}"
          d:Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignHeight="2500" d:DesignWidth="800"
      Title="CustomPresets" Loaded="Page_Loaded">

	<Grid>
		<DockPanel>
			<TextBlock
            FontSize="26"
            FontWeight="Medium"
            Text="自定义预设" DockPanel.Dock="Top" Margin="18,10,0,0"/>

			<DockPanel DockPanel.Dock="Top" Margin="18,9,18,0">
				<StackPanel Orientation="Horizontal" DockPanel.Dock="Left" HorizontalAlignment="Left">
					<TextBlock FontSize="17" FontWeight="Medium" Margin="0,0,12,0" VerticalAlignment="Center">已保存的预设:</TextBlock>
					<ComboBox Width="225" Name="cbxPowerPreset" SelectionChanged="cbxPowerPreset_SelectionChanged" Height="37"></ComboBox>
				</StackPanel>
				<StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
					<TextBlock FontSize="17" FontWeight="Medium" Margin="0,0,12,0" VerticalAlignment="Center">新预设名称:</TextBlock>
					<ui:TextBox Width="225" Name="tbxPresetName" Margin="0,0,-2,0" Height="35"></ui:TextBox>
				</StackPanel>
			</DockPanel>

			<StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,9,9,6">
				<ui:Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,9" Height="40" DockPanel.Dock="Bottom" Width="50" Name="btnUndo" Visibility="Collapsed" ToolTip="撤销超频设置" Click="btnUndo_Click">
					<ui:SymbolIcon Symbol="ArrowUndo24" FontSize="24"/>
				</ui:Button>
				<ui:Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,9" Height="40" DockPanel.Dock="Bottom" Width="50" Name="btnLoad" ToolTip="重新加载当前预设值" Click="btnLoad_Click">
					<ui:SymbolIcon Symbol="ArrowSync20" FontSize="24"/>
				</ui:Button>
				<ui:Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,9" Height="40" DockPanel.Dock="Bottom" Width="50" Name="btnDelete" ToolTip="删除当前预设" Click="btnDelete_Click">
					<ui:SymbolIcon Symbol="Delete20" FontSize="24"/>
				</ui:Button>
				<ui:Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,9" Height="40" DockPanel.Dock="Bottom" Width="50" Name="btnSave" ToolTip="保存当前设置为新预设" Click="btnSave_Click">
					<ui:SymbolIcon Symbol="Save20" FontSize="24"/>
				</ui:Button>
				<ui:Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,9" Height="40" DockPanel.Dock="Bottom" Width="50" Name="btnApply" ToolTip="应用当前设置" Click="btnApply_Click">
					<ui:SymbolIcon Symbol="DocumentCheckmark20" FontSize="24"/>
				</ui:Button>
			</StackPanel>

			<ScrollViewer Name="mainScroll" Margin="0,9,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="False" PanningMode="VerticalFirst" Stylus.IsFlicksEnabled="False" Stylus.IsTouchFeedbackEnabled="True" IsDeferredScrollingEnabled="False" ScrollChanged="mainScroll_ScrollChanged">
				<StackPanel Name="mainCon" Margin="15,0,0,0">
					<ui:CardExpander Name="sdAmdApuThermal"
            IsEnabled="True"
            IsExpanded="False"
            Icon="Temperature20" Margin="0,0,15,0">
						<ui:CardExpander.Header>
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<StackPanel Grid.Column="0" VerticalAlignment="Center">
									<TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Text="APU 温度调节" />
									<TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Text="允许设置 APU 温度目标。"/>
								</StackPanel>
							</Grid>
						</ui:CardExpander.Header>
						<StackPanel>
							<StackPanel Margin="0,-8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">温度限制 (°C)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 APU 开始软降频的温度限制" VerticalAlignment="Bottom" />
								</StackPanel>

								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbAPUTemp"/>
									<ui:NumberBox Name="nudAPUTemp" Text="{Binding ElementName=sdAPUTemp, Path=Value}" Value="{Binding ElementName=sdAPUTemp, Path=Value}" Maximum="105" Minimum="10" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0" />
									<Slider Name="sdAPUTemp" Value="{Binding ElementName=nudAPUTemp, Path=Value}" Maximum="105" Minimum="10" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>
							<StackPanel Margin="0,8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">表面温度限制 (°C)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制笔记本机身温度限制，达到该值时 APU 开始降频" VerticalAlignment="Bottom"/>
								</StackPanel>
								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbAPUSkinTemp"/>
									<ui:NumberBox Name="nudAPUSkinTemp" Text="{Binding ElementName=sdAPUSkinTemp, Path=Value}" Value="{Binding ElementName=sdAPUSkinTemp, Path=Value}" Maximum="105" Minimum="8" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0" />
									<Slider Name="sdAPUSkinTemp" Value="{Binding ElementName=nudAPUSkinTemp, Path=Value}" Maximum="105" Minimum="8" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>

						</StackPanel>
					</ui:CardExpander>
					<ui:CardExpander Name="sdAmdCpuThermal"
            Margin="0,8,15,0"
            IsEnabled="True"
            IsExpanded="False"
            Icon="Temperature20">
						<ui:CardExpander.Header>
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<StackPanel Grid.Column="0" VerticalAlignment="Center">
									<TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Text="CPU 温度调节" />
									<TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Text="允许设置 CPU 温度目标。"/>
								</StackPanel>
							</Grid>
						</ui:CardExpander.Header>
						<StackPanel>
							<StackPanel Margin="0,-8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">温度限制 (°C)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 CPU 开始硬降频的温度限制" VerticalAlignment="Bottom" />
								</StackPanel>

								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbCPUTemp"/>
									<ui:NumberBox Name="nudCPUTemp" Text="{Binding ElementName=sdCPUTemp, Path=Value}" Value="{Binding ElementName=sdCPUTemp, Path=Value}" Maximum="95" Minimum="10" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0" />
									<Slider Name="sdCPUTemp" Value="{Binding ElementName=nudCPUTemp, Path=Value}" Maximum="95" Minimum="10" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>

						</StackPanel>
					</ui:CardExpander>
					<ui:CardExpander
            Margin="0,8,15,0"
            IsEnabled="True"
            IsExpanded="False"
            Icon="Power20"
                        Name="sdAmdApuCPU">
						<ui:CardExpander.Header>
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<StackPanel Grid.Column="0" VerticalAlignment="Center">
									<TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Text="APU 功率调节"/>
									<TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Text="允许设置 APU 功率目标。"/>
								</StackPanel>
							</Grid>
						</ui:CardExpander.Header>
						<StackPanel>
							<StackPanel Margin="0,-8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">STAPM 功率限制 (W)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 APU 的表面温度感知电源管理 (STAPM) 功率限制" VerticalAlignment="Bottom"/>
								</StackPanel>
								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbSTAPMPow"/>
									<ui:NumberBox Name="nudSTAPMPow" Text="{Binding ElementName=sdSTAPMPow, Path=Value}" Value="{Binding ElementName=sdSTAPMPow, Path=Value}" Maximum="300" Minimum="5" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0"/>
									<Slider Name="sdSTAPMPow" Value="{Binding ElementName=nudSTAPMPow, Path=Value}" Maximum="300" Minimum="5" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>
							<StackPanel Margin="0,8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">慢速功率限制 (W)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 APU 的慢速加速持续时间功率限制。在启用 SmartShift 的系统中，此选项控制 AMD CPU 和 AMD 独立显卡之间共享的总功率" VerticalAlignment="Bottom"/>
								</StackPanel>
								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbSlowPow"/>
									<ui:NumberBox Name="nudSlowPow" Text="{Binding ElementName=sdSlowPow, Path=Value}" Value="{Binding ElementName=sdSlowPow, Path=Value}" Maximum="300" Minimum="5" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0"/>
									<Slider Name="sdSlowPow" Value="{Binding ElementName=nudSlowPow, Path=Value}" Maximum="300" Minimum="5" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>
							<StackPanel Margin="0,8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">慢速加速持续时间 (秒)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 APU 维持在慢速功率限制内的时间" VerticalAlignment="Bottom"/>
								</StackPanel>
								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbSlowTime"/>
									<ui:NumberBox Name="nudSlowTime" Text="{Binding ElementName=sdSlowTime, Path=Value}" Value="{Binding ElementName=sdSlowTime, Path=Value}" Maximum="1024" Minimum="2" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0"/>
									<Slider Name="sdSlowTime" Value="{Binding ElementName=nudSlowTime, Path=Value}" Maximum="1024" Minimum="2" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>

							<StackPanel Margin="0,8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">快速功率限制 (W)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 APU 的快速加速持续时间功率限制。在启用 SmartShift 的系统中，此选项控制 AMD CPU 和 AMD 独立显卡之间共享的总功率" VerticalAlignment="Bottom"/>
								</StackPanel>
								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbFastPow"/>
									<ui:NumberBox Name="nudFastPow" Text="{Binding ElementName=sdFastPow, Path=Value}" Value="{Binding ElementName=sdFastPow, Path=Value}" Maximum="300" Minimum="5" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0" />
									<Slider Name="sdFastPow" Value="{Binding ElementName=nudFastPow, Path=Value}" Maximum="300" Minimum="5" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>
							<StackPanel Margin="0,8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">快速加速持续时间 (秒)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 APU 维持在快速功率限制内的时间" VerticalAlignment="Bottom"/>
								</StackPanel>
								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbFastTime"/>
									<ui:NumberBox Name="nudFastTime" Text="{Binding ElementName=sdFastTime, Path=Value}" Value="{Binding ElementName=sdFastTime, Path=Value}" Maximum="1024" Minimum="2" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0" />
									<Slider Name="sdFastTime" Value="{Binding ElementName=nudFastTime, Path=Value}" Maximum="1024" Minimum="2" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>
						</StackPanel>
					</ui:CardExpander>
					<ui:CardExpander
            Margin="0,8,15,0"
            IsEnabled="True"
            IsExpanded="False"
            Icon="Power20"
                        Name="sdAmdCPU">
						<ui:CardExpander.Header>
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<StackPanel Grid.Column="0" VerticalAlignment="Center">
									<TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Text="CPU 功率调节"/>
									<TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Text="允许设置 CPU 功率目标。"/>
								</StackPanel>
							</Grid>
						</ui:CardExpander.Header>
						<StackPanel>
							<StackPanel Margin="0,-8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">PPT 限制 (W)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 CPU 的封装功率追踪 (PPT) 功率限制" VerticalAlignment="Bottom"/>
								</StackPanel>
								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbPPT"/>
									<ui:NumberBox Name="nudPPT" Text="{Binding ElementName=sdPPT, Path=Value}" Value="{Binding ElementName=sdPPT, Path=Value}" Maximum="300" Minimum="8" Grid.Column="1" SmallChange="1" MaxDecimalPlaces="0" />
									<Slider Name="sdPPT" Value="{Binding ElementName=nudPPT, Path=Value}" Maximum="300" Minimum="8" Grid.Column="2" Margin="12,0,0,0" TickFrequency="1" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>
							<StackPanel Margin="0,8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">EDC 限制 (A)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 CPU 的电气设计电流 (EDC) 限制" VerticalAlignment="Bottom"/>
								</StackPanel>
								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbEDC"/>
									<ui:NumberBox Name="nudEDC" Text="{Binding ElementName=sdEDC, Path=Value}" Value="{Binding ElementName=sdEDC, Path=Value}" Maximum="900" Minimum="8" Grid.Column="1" SmallChange="25" MaxDecimalPlaces="0" />
									<Slider Name="sdEDC" Value="{Binding ElementName=nudEDC, Path=Value}" Maximum="900" Minimum="8" Grid.Column="2" Margin="12,0,0,0" TickFrequency="25" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>
							<StackPanel Margin="0,8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">TDC 限制 (A)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 CPU 的热设计电流 (TDC) 限制" VerticalAlignment="Bottom"/>
								</StackPanel>
								<Grid Margin="0,8,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="33" />
										<ColumnDefinition Width="150" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<CheckBox Name="cbTDC"/>
									<ui:NumberBox Name="nudTDC" Text="{Binding ElementName=sdTDC, Path=Value}" Value="{Binding ElementName=sdTDC, Path=Value}" Maximum="900" Minimum="8" Grid.Column="1" SmallChange="25" MaxDecimalPlaces="0" />
									<Slider Name="sdTDC" Value="{Binding ElementName=nudTDC, Path=Value}" Maximum="900" Minimum="8" Grid.Column="2" Margin="12,0,0,0" TickFrequency="25" VerticalAlignment="Center" IsSnapToTickEnabled="True" TouchDown="SizeSlider_TouchDown"/>
								</Grid>
							</StackPanel>
						</StackPanel>
					</ui:CardExpander>
					<ui:CardExpander
            Margin="0,8,15,0"
            IsEnabled="True"
            IsExpanded="False"
            Icon="Power20"
                        Name="sdIntelCPU">
						<ui:CardExpander.Header>
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<StackPanel Grid.Column="0" VerticalAlignment="Center">
									<TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Text="CPU 功率调节"/>
									<TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Text="允许设置 CPU 功率目标。"/>
								</StackPanel>
							</Grid>
						</ui:CardExpander.Header>
						<StackPanel>
							<StackPanel Margin="0,-8,0,0">
								<StackPanel Orientation="Horizontal">
									<TextBlock FontWeight="DemiBold" FontSize="13" Foreground="{DynamicResource TextFillColorPrimaryBrush}">功率限制 PL1 (W)</TextBlock>
									<ui:SymbolIcon Symbol="Info20" Margin="6,0,0,-2" Foreground="{DynamicResource TextFillColorPrimaryBrush}" ToolTip="控制 CPU 的总功率限制" VerticalAlignment="Bottom"/>
								</StackPanel>
